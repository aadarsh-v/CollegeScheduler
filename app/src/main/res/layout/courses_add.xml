<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/toolst"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/name" />

            <EditText
                android:id="@+id/nameInputDialog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dayInput"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/section" />

            <EditText
                android:id="@+id/sectionInputDialog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/professor" />

            <EditText
                android:id="@+id/professorInputDialog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/location" />

            <EditText
                android:id="@+id/locationInputDialog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/room_number" />

            <EditText
                android:id="@+id/roomNumberInputDialog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/monday" />

                <CheckBox
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/tuesday" />

                <CheckBox
                    android:id="@+id/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/wednesday" />

                <CheckBox
                    android:id="@+id/wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/thursday" />

                <CheckBox
                    android:id="@+id/thursday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/friday" />

                <CheckBox
                    android:id="@+id/friday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/start" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/hour" />

                <EditText
                    android:id="@+id/startHourInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/minute" />

                <EditText
                    android:id="@+id/startMinuteInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_marginStart="5dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:ems="10"
                android:text="@string/end" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/hour" />

                <EditText
                    android:id="@+id/endHourInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:ems="10"
                    android:text="@string/minute" />

                <EditText
                    android:id="@+id/endMinuteInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_marginStart="5dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>